<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Article card -->
    <style name="ArticleCardTitle">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/ac_title_text_size</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="ArticleCardPublishedAt">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/ac_date_text_size</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="ArticleCardDescription">
        <item name="android:textSize">@dimen/ac_description_text_size</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>
</resources>